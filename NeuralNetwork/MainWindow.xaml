<Window x:Class="NeuralNetwork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:i = "http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:ei = "http://schemas.microsoft.com/expression/2010/interactions"
        xmlns:local="clr-namespace:NeuralNetwork"
        xmlns:ui ="clr-namespace:NeuralNetwork.CustomUI"
        mc:Ignorable="d"
        Title="NeuralNetwork" Height="682" Width="1320" Background="Black">
    <Window.Resources>
        <Color x:Key="ColorMain">#FF3A3A3A</Color>
        <Color x:Key="Color1">#FF003F5D</Color>
        <Color x:Key="Color2">#88FDFDFD</Color>
        <SolidColorBrush x:Key="InfoBack" Color="{StaticResource Color1}" ></SolidColorBrush>
        <SolidColorBrush x:Key="DefaultBack" Color="{StaticResource ColorMain}"></SolidColorBrush>
        <SolidColorBrush x:Key="TextBlockFore" Color="{StaticResource Color2}"></SolidColorBrush>
        <Style TargetType="Menu">
            <Setter Property="ItemsControl.Foreground" Value="AliceBlue"></Setter>
            <Setter Property="ItemsControl.Background" Value="DarkSlateGray"></Setter>
        </Style>
        <Style TargetType="MenuItem">
            <Setter Property="ItemsControl.FontSize" Value="15"></Setter>
            <Setter Property="ItemsControl.Background" Value="DarkSlateGray"></Setter>
            <Setter Property="ItemsControl.Foreground" Value="BurlyWood"></Setter>
        </Style>
        <Color x:Key="Color3">#AA0088FF</Color>
        <SolidColorBrush x:Key="Brush1" Color="{DynamicResource Color3}" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" DockPanel.Dock="Left" VerticalAlignment="Center">
            <MenuItem Header="File">
                <MenuItem Header="Open" Command="{Binding OpenFile}"></MenuItem>
                <MenuItem Header="Save"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Close"></MenuItem>
            </MenuItem>
            <MenuItem Header="Options"></MenuItem>
            <MenuItem Header="Query" Command="{Binding Path=NetworkWorkshop.Query}"></MenuItem>
            <MenuItem Header="Create" Command="{Binding Path=NetworkWorkshop.Create}" ></MenuItem>
            <MenuItem Header="Add layer" Command="{Binding Path=NetworkWorkshop.AddLayer}"></MenuItem>
            <MenuItem Header="Remove layer" Command="{Binding Path=NetworkWorkshop.RemoveLayer}"></MenuItem>
        </Menu>
        <DockPanel Grid.Row="1" DataContext="{Binding NetworkWorkshopVM}">
            <DockPanel.Background>
                <SolidColorBrush Color="{StaticResource Color1}" />
            </DockPanel.Background>
            <Border BorderThickness="2" BorderBrush="{StaticResource Brush1}">
                <StackPanel DockPanel.Dock="Left" MinWidth="280pt" Background="{StaticResource InfoBack}">
                    <StackPanel.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Background" Value="{StaticResource InfoBack}"></Setter>
                            <Setter Property="ItemsControl.FontSize" Value="16"></Setter>
                            <Setter Property="Foreground" Value="{StaticResource TextBlockFore}"></Setter>
                            <Setter Property="Margin" Value="10 0 0 0"></Setter>
                        </Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Background" Value="{StaticResource InfoBack}"></Setter>
                            <Setter Property="ItemsControl.FontSize" Value="14"></Setter>
                            <Setter Property="Foreground" Value="{StaticResource TextBlockFore}"></Setter>
                            <Setter Property="BorderBrush" Value="{x:Null}"></Setter>
                            <Setter Property="Margin" Value="20 0 0 0"></Setter>
                            <Setter Property="IsReadOnly" Value="True"></Setter>
                        </Style>
                    </StackPanel.Resources>
                    <Border BorderThickness="1" BorderBrush="{DynamicResource Brush1}">
                        <StackPanel Orientation="Vertical" Margin="5 12 0 8" DataContext="{Binding CurrentNetworkStorage}">
                            <TextBlock Text="Current storage ID:"></TextBlock>
                            <TextBox Text="{Binding Id, Mode=OneWay}" />
                            <TextBlock Text="Networks at storage:"></TextBlock>
                            <TextBox Text="{Binding NetworksCount, Mode=OneWay}"></TextBox>
                        </StackPanel>
                    </Border>
                    <Border BorderThickness="1" BorderBrush="{StaticResource Brush1}">
                        <StackPanel Orientation="Vertical" Margin="5 12 0 8" DataContext="{Binding CurrentNetwork}">
                            <TextBlock Text="Current network ID:"></TextBlock>
                            <TextBox Text="{Binding Id}"></TextBox>
                            <TextBlock Text="Current network info:" ></TextBlock>
                            <StackPanel Orientation="Vertical" Margin="10 0 0 0">
                                <TextBlock Text="Layers count:"></TextBlock>
                                <TextBox Text="{Binding LayersCount, Mode=OneWay}"></TextBox>
                                <TextBlock Text="Inputs count:"></TextBlock>
                                <TextBox Text="{Binding InputsCount, Mode=OneWay}"></TextBox>
                                <TextBlock Text="Outputs count:"></TextBlock>
                                <TextBox Text="{Binding OutputsCount, Mode=OneWay}"></TextBox>
                                <TextBlock Text="Learning rate:"></TextBlock>
                                <TextBox Text="{Binding LearningRate, Mode=OneWay}"></TextBox>
                                <TextBlock Text="Activation func:"></TextBlock>
                                <TextBox Text="{Binding ActivationFuncName, Mode=OneWay}"></TextBox>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <StackPanel Orientation="Vertical" Margin="10 0 0 0">
                        <StackPanel.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{x:Null}"></Setter>
                            </Style>
                            <Style TargetType="TreeView">
                                <Setter Property="Background" Value="{x:Null}"></Setter>
                            </Style>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="Background" Value="{x:Null}"></Setter>
                                <Setter Property="Foreground" Value="{StaticResource TextBlockFore}"></Setter>
                            </Style>
                        </StackPanel.Resources>
                        <TextBlock>Storage list:</TextBlock>
                        <TreeView ItemsSource="{Binding NetworkStoragesList, Mode=OneWay}">
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Networks, Mode=OneWay}">
                                    <TextBlock Text="{Binding Id}" ></TextBlock>
                                    <HierarchicalDataTemplate.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Id}"></TextBlock>
                                        </DataTemplate>
                                    </HierarchicalDataTemplate.ItemTemplate>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </StackPanel>
                </StackPanel>
            </Border>
            <DockPanel DockPanel.Dock="Left">
                <Grid Grid.Row="1" DataContext="{Binding RedactorVM}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="0.5*"></ColumnDefinition>
                        <ColumnDefinition Width="0.5*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <DockPanel Grid.Column="0">
                        <ComboBox DockPanel.Dock="Top" ItemsSource="{Binding Funcs}" SelectedItem="{Binding CurrentActivationFunc}"></ComboBox>
                        <xctk:DoubleUpDown DockPanel.Dock="Top" Value="{Binding LearningRate, Mode=TwoWay}" Increment="0.005" ></xctk:DoubleUpDown>
                        <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
                            <ItemsControl Grid.Column="0" ItemsSource="{Binding Layers}">
                                <ItemsControl.Background>
                                    <SolidColorBrush Color="{DynamicResource Color1}" />
                                </ItemsControl.Background>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel></StackPanel>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <DataTemplate.Resources>
                                            <Style TargetType="DockPanel">
                                                <Setter Property="Background" Value="Wheat"></Setter>
                                            </Style>
                                        </DataTemplate.Resources>
                                        <DockPanel>
                                            <TextBlock>Layer #</TextBlock>
                                            <TextBlock Text="{Binding Path=LayerIndex}"></TextBlock>
                                            <TextBlock>Neurons Count</TextBlock>
                                            <xctk:IntegerUpDown Value="{Binding NeuronsCount, Mode=TwoWay}" Minimum="2"></xctk:IntegerUpDown>
                                        </DockPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </DockPanel>
                    <StackPanel Grid.Column="1" DataContext="{Binding Path=CurrentInputs}">
                        <xctk:DoubleUpDown FormatString="F16" Value="{Binding Path=[0], Mode=TwoWay}" Increment=".0001"  Maximum="1.0" />
                        <xctk:DoubleUpDown FormatString="F16" Value="{Binding Path=[1], Mode=TwoWay}" Increment=".0001"  Maximum="1.0" />
                        <xctk:DoubleUpDown FormatString="F16" Value="{Binding Path=[2], Mode=TwoWay}" Increment=".0001"  Maximum="1.0" />
                    </StackPanel>
                    <StackPanel Grid.Column="2" DataContext="{Binding Path=CurrentOutputs}">
                        <TextBlock Text="{Binding Path=[0]}" />
                        <TextBlock Text="{Binding Path=[1]}" />
                        <TextBlock Text="{Binding Path=[2]}" />
                    </StackPanel>
                </Grid>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>